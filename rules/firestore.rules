rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      return isAuthenticated() && 
             request.auth.token.role == role;
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isClinician() {
      return hasRole('clinician') || isAdmin();
    }
    
    function isModerator() {
      return hasRole('moderator') || isClinician();
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId) || isClinician();
      allow write: if isOwner(userId) || isAdmin();
    }
    
    // Profiles collection - users can read/write their own profile
    match /profiles/{userId} {
      allow read: if isOwner(userId) || isClinician();
      allow create, update: if isOwner(userId);
      allow delete: if isOwner(userId) || isAdmin();
    }
    
    // Assessments collection - users can only access their own assessments
    match /assessments/{assessmentId} {
      allow read: if isOwner(resource.data.userId) || isClinician();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Articles collection - public read, admin/mod write
    match /articles/{articleId} {
      allow read: if true; // Public read
      allow create, update, delete: if isModerator();
    }
    
    // Knowledge Hub content
    match /knowledge/{articleId} {
      allow read: if true; // Public read
      allow write: if isModerator();
    }
    
    // Recommendations collection - users can only access their own
    match /recommendations/{recommendationId} {
      allow read: if isOwner(resource.data.userId) || isClinician();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Admin-only collections
    match /admin/{document=**} {
      allow read, write: if isAdmin();
    }
    
    // ML monitoring data - admin/clinician only
    match /ml_monitoring/{document=**} {
      allow read: if isClinician();
      allow write: if isAdmin();
    }
    
    // User sessions/activity - users can read their own, admin can read all
    match /sessions/{sessionId} {
      allow read: if isOwner(resource.data.userId) || isAdmin();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Cycle logs - users can read/write their own cycle logs
    match /cycleLogs/{cycleLogId} {
      allow read: if isOwner(resource.data.userId) || isClinician();
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId) || isAdmin();
    }
    
    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

